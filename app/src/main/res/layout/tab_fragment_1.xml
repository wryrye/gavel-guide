<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aperture.science.final_project_umbreon.TabFragment1"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/teamTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="30sp"
            android:text="Round"
            android:onClick="sendMessage"
            />

        <TextView
            android:id="@+id/winsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:textSize="30sp"
            android:text="Gov"
            android:onClick="sendMessage"
            />

        <TextView
            android:id="@+id/lossesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:textSize="30sp"
            android:text="Opp"
            android:onClick="sendMessage"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pairing 1"
        android:id="@+id/viewPairings1"
        android:layout_below="@+id/rvTab1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="viewPairing"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pairing 2"
        android:id="@+id/viewPairings2"
        android:layout_below="@+id/viewPairings1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:onClick="viewPairing2"/>


    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/rvTab1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--/>-->

</RelativeLayout>